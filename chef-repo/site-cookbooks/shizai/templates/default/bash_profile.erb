# .bashrc

# Source global definitions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions

<% if @color == 'red' %>
export PS1="\[\e[1;31m\][\u@\h \W]\\$ \[\e[m\]"

mycolor=$'\001\033[1;31m\002'
clear=$'\001\033[0m\002'
export MYSQL_PS1="$mycolor\\R:\\m \\U [\\d] > $clear"
<% elsif @color == 'yellow' %>
export PS1="\[\e[1;33m\][\u@\h \W]\\$ \[\e[m\]"

mycolor=$'\001\033[1;33m\002'
clear=$'\001\033[0m\002'
export MYSQL_PS1="$mycolor\\R:\\m \\U [\\d] > $clear"
<% elsif @color == 'green' %>
export PS1="\[\e[1;32m\][\u@\h \W]\\$ \[\e[m\]"

mycolor=$'\001\033[1;32m\002'
clear=$'\001\033[0m\002'
export MYSQL_PS1="$mycolor\\R:\\m \\U [\\d] > $clear"
<% elsif @color == 'blue' %>
export PS1="\[\e[1;34m\][\u@\h \W]\\$ \[\e[m\]"

mycolor=$'\001\033[1;34m\002'
clear=$'\001\033[0m\002'
export MYSQL_PS1="$mycolor\\R:\\m \\U [\\d] > $clear"
<% end %>
